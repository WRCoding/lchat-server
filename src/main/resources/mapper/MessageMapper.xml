<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.lpepsi.lchatserver.dao.mapper.MessageMapper">
    <select id="getOffLineMessage" resultType="top.lpepsi.lchatserver.entity.Message">
        SELECT msg_seq,
               send_id AS 'from', receive_id AS 'to', message,
               msg_type,
               type
        FROM lchat_message
        WHERE (receive_id = #{receiveId})
    </select>

    <select id="getGroupMsgByGroupId" parameterType="list" resultType="top.lpepsi.lchatserver.entity.Message">
        select send_id as 'from', message, msg_seq, msg_type, receive_id as 'to', type from lchat_group_message where receive_id in
            <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
                #{id}
            </foreach>
    </select>

    <insert id="insertGroupMessage" parameterType="top.lpepsi.lchatserver.entity.Message">
        insert into lchat_group_message
        values (#{from}, #{message}, #{msgSeq}, #{msgType}, #{to}, #{type})
    </insert>
</mapper>